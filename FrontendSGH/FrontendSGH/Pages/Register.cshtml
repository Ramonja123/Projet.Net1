@page
@model FrontendSGH.Pages.RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Inscription";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blue Kasbah Resort</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
</head>
<body style="margin: 0; padding: 0; overflow: hidden;">

<style>
    .register-section {
        height: 100vh; /* Fixed height */
        overflow: hidden; /* No scroll */
        background: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        padding-top: 2rem;
        padding-bottom: 2rem;
    }
    .register-section::before {
        content: "";
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: rgba(10, 25, 47, 0.5); /* Blue-ish dark overlay */
        z-index: 1;
    }
    .register-container {
        position: relative;
        z-index: 2;
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 20px;
    }
    .register-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255,255,255,0.3);
        border-radius: 20px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        width: 100%;
        max-width: 500px; /* Fixed Width SAME AS LOGIN */
        overflow: hidden;
    }
    .register-header {
        background: linear-gradient(135deg, #006D77, #83C5BE);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
        letter-spacing: -1px;
    }
    .btn-register {
        background: linear-gradient(135deg, #006D77, #83C5BE);
        border: none;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .btn-register:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 109, 119, 0.4);
        opacity: 0.95;
    }
</style>

<div class="register-section">
    <a href="/" class="btn btn-light position-absolute top-0 start-0 m-4 rounded-pill shadow-sm text-decoration-none fw-bold" style="z-index: 10;">
        <i class="bi bi-arrow-left me-2"></i>Accueil
    </a>
    <div class="register-container">
        <div class="card register-card p-4 p-md-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus-fill display-4" style="background: linear-gradient(135deg, #006D77, #83C5BE); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                        <h2 class="register-header mt-2">Créer un compte</h2>
                        <p class="text-muted small">Rejoignez-nous pour une expérience exclusive</p>
                    </div>
                    
                    <form id="registerForm">
                        <div id="errorAlert" class="alert alert-danger d-none" role="alert"></div>
                        <div id="successAlert" class="alert alert-success d-none" role="alert"></div>
                        
                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="Input_Nom" placeholder="Nom" required />
                                    <label for="Input_Nom">Nom</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="Input_Prenom" placeholder="Prénom" required />
                                    <label for="Input_Prenom">Prénom</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="Input_Email" placeholder="name@example.com" required />
                            <label for="Input_Email"><i class="bi bi-envelope me-2"></i>Email</label>
                        </div>

                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="Input_Password" placeholder="Mot de passe" required />
                                    <label for="Input_Password"><i class="bi bi-lock me-2"></i>Mot de passe</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="Input_ConfirmPassword" placeholder="Confirmer" required />
                                    <label for="Input_ConfirmPassword"><i class="bi bi-lock-fill me-2"></i>Confirmer</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="Input_Adresse" placeholder="Adresse" />
                            <label for="Input_Adresse"><i class="bi bi-geo-alt me-2"></i>Adresse (Optionnel)</label>
                        </div>
                        
                        <div class="form-floating mb-4">
                            <input type="date" class="form-control" id="Input_DateNaissance" required />
                            <label for="Input_DateNaissance">Date de Naissance</label>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-register w-100 btn-lg text-white rounded-pill fw-bold mb-3">
                            S'inscrire
                        </button>

                        <div class="text-center">
                            <span class="text-muted small">Vous avez déjà un compte ?</span>
                            <a href="/Login" class="text-decoration-none fw-bold text-dark ms-1">Se connecter</a>
                        </div>
                    </form>
                </div>
            </div>
</div>

<script>
    document.getElementById("registerForm").addEventListener("submit", async function (e) {
        e.preventDefault();
        
        const password = document.getElementById("Input_Password").value;
        const confirm = document.getElementById("Input_ConfirmPassword").value;
        const errorAlert = document.getElementById("errorAlert");
        const successAlert = document.getElementById("successAlert");

        errorAlert.classList.add("d-none");
        successAlert.classList.add("d-none");

        if (password !== confirm) {
            errorAlert.innerText = "Les mots de passe ne correspondent pas.";
            errorAlert.classList.remove("d-none");
            return;
        }

        const payload = {
            nom: document.getElementById("Input_Nom").value,
            prenom: document.getElementById("Input_Prenom").value,
            email: document.getElementById("Input_Email").value,
            password: password,
            adresse: document.getElementById("Input_Adresse").value,
            dateNaissance: document.getElementById("Input_DateNaissance").value,
            userType: "Client"
        };

        try {
            const response = await fetch("http://localhost:5004/api/Auth/RegisterClient", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(payload)
            });

            const data = await response.json();

            if (response.ok) {
                successAlert.innerText = "Inscription réussie ! Redirection...";
                successAlert.classList.remove("d-none");
                setTimeout(() => window.location.href = "/Login", 2000);
            } else {
                let msg = "Erreur d'inscription.";
                if (data.errors) {
                    msg = data.errors.map(e => e.description || e).join("<br/>");
                } else if (typeof data === 'string') {
                    msg = data;
                }
                errorAlert.innerHTML = msg;
                errorAlert.classList.remove("d-none");
            }
        } catch (err) {
            errorAlert.innerText = "Impossible de contacter le serveur.";
            errorAlert.classList.remove("d-none");
        }
    });
</script>
</body>
</html>