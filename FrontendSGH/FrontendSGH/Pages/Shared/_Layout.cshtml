<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blue Kasbah Resort</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FrontendSGH.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-custom border-bottom border-secondary box-shadow mb-0 py-3">
            <div class="container">
                <a class="navbar-brand fw-bold text-uppercase" href="/" style="letter-spacing: 1px;">
                    <i class="bi bi-water me-2"></i>Blue Kasbah Resort
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Rooms">Chambres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ServicesList">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Confidentialité</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item d-none" id="nav-cart">
                            <a class="nav-link" asp-area="" asp-page="/Panier"><i class="bi bi-cart-fill me-1"></i>Panier</a>
                        </li>
                        
                        <!-- Logged In Dropdown -->
                        <li class="nav-item dropdown d-none" id="user-dropdown">
                            <a class="nav-link dropdown-toggle fw-bold" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> <span id="user-name-display">Mon Compte</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="navbarDropdown">
                                <!-- Points Section (Client Only) -->
                                <li id="dropdown-points-container" class="px-3 py-2 text-center bg-light mb-2 rounded-3 mx-2">
                                    <span class="d-block small text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Points Fidélité</span>
                                    <span class="h4 fw-bold text-primary mb-0" id="user-points">0</span>
                                </li>
                                
                                <li id="dropdown-reservations"><a class="dropdown-item py-2" asp-page="/MesReservations"><i class="bi bi-calendar-check me-2 text-primary"></i>Mes Réservations</a></li>
                                <li id="dropdown-profile"><a class="dropdown-item py-2" asp-page="/Profile"><i class="bi bi-pencil-square me-2 text-primary"></i>Modifier Profil</a></li>
                                <li id="dropdown-dashboard" class="d-none"><a class="dropdown-item py-2 fw-bold text-warning" href="/AdminDashboard"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger py-2" href="#" onclick="logout()"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a></li>
                            </ul>
                        </li>

                        <li class="nav-item" id="nav-login">
                            <a class="btn btn-outline-light btn-sm ms-2 rounded-pill px-3" asp-area="" asp-page="/Login">Connexion</a>
                        </li>
                        <li class="nav-item" id="nav-register">
                            <a class="btn btn-warning btn-sm ms-2 rounded-pill px-3 fw-bold" asp-area="" asp-page="/Register">Inscription</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", async function() {
            const isLoggedIn = localStorage.getItem("isLoggedIn") === "true";
            
            if (isLoggedIn) {
                document.getElementById("nav-login").classList.add("d-none");
                document.getElementById("nav-register").classList.add("d-none");
                document.getElementById("user-dropdown").classList.remove("d-none");

                // Check stored role first for immediate UI
                const role = localStorage.getItem("userRole");
                 if (role === "Client") {
                     document.getElementById("nav-cart").classList.remove("d-none");
                 }

                // Fetch fresh data (Points, Name, precise Role)
                try {
                    const res = await fetch("http://localhost:5004/api/Auth/me", { credentials: "include" });
                    if (res.ok) {
                        const data = await res.json();
                        
                        // Update Name
                        document.getElementById("user-name-display").innerText = data.nomUtilisateur || "Mon Compte";
                        
                        // Update Points
                        if (data.roles.includes("Client")) {
                            document.getElementById("user-points").innerText = data.pointsFidelite || 0;
                            document.getElementById("nav-cart").classList.remove("d-none");
                        } else {
                            // Hide specific client links if not client (e.g. Points, Cart)
                             document.getElementById("dropdown-points-container").style.display = "none";
                             document.getElementById("nav-cart").classList.add("d-none"); // Ensure hidden
                             document.getElementById("dropdown-reservations").style.display = "none";
                        }

                        // Show Dashboard if Admin/Responsable
                        if (data.roles.includes("Admin") || data.roles.includes("Responsable")) {
                            document.getElementById("dropdown-dashboard").classList.remove("d-none");
                        }
                    } else {
                        // If 401, maybe session expired? logout.
                         if(res.status === 401) logout();
                    }
                } catch (e) {
                    console.error("Error fetching user data", e);
                }
            }
        });

        async function logout() {
            try {
                await fetch("http://localhost:5004/api/Auth/logout", { 
                    method: "POST",
                    credentials: "include" 
                });
            } catch (e) { console.error(e); }

            localStorage.removeItem("isLoggedIn");
            localStorage.removeItem("userName");
            localStorage.removeItem("userRole");
            
            window.location.href = "/";
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>