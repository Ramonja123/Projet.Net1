@page
@model FrontendSGH.Pages.ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Mot de passe oublié";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blue Kasbah Resort</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body style="margin: 0; padding: 0; overflow: hidden;">
<style>
    .bg-section {
        height: 100vh;
        overflow: hidden;
        background: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
    .bg-section::before {
        content: "";
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: rgba(10, 25, 47, 0.5);
        z-index: 1;
    }
    .form-container {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 450px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        padding: 2.5rem;
    }
    .gradient-text {
        background: linear-gradient(135deg, #006D77, #83C5BE);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
    }
    .btn-gradient {
        background: linear-gradient(135deg, #006D77, #83C5BE);
        border: none;
        color: white;
        font-weight: 600;
        transition: transform 0.2s;
    }
    .btn-gradient:hover {
        transform: translateY(-2px);
        color: white;
    }
</style>

<div class="bg-section">
    <a href="/Login" class="btn btn-light position-absolute top-0 start-0 m-4 rounded-pill shadow-sm text-decoration-none fw-bold" style="z-index: 10;">
        <i class="bi bi-arrow-left me-2"></i>Retour
    </a>
    
    <div class="form-container text-center">
        <i class="bi bi-key-fill display-4" style="background: linear-gradient(135deg, #006D77, #83C5BE); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
        <h2 class="gradient-text mt-3 mb-4">Mot de passe oublié</h2>
        <p class="text-muted mb-4">Entrez votre email pour recevoir un code de réinitialisation.</p>

        <form id="forgotForm">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                <label for="email">Adresse Email</label>
            </div>
            
            <button type="submit" class="btn btn-gradient w-100 py-2 rounded-pill">Envoyer le code</button>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.getElementById("forgotForm").addEventListener("submit", async function(e) {
        e.preventDefault();
        const email = document.getElementById("email").value;
        const btn = e.target.querySelector("button");
        
        btn.disabled = true;
        btn.innerText = "Envoi...";

        try {
            const res = await fetch("http://localhost:5004/api/Auth/forgot-password", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email: email })
            });
            
            if (res.ok) {
                // Store email for next step
                localStorage.setItem("resetEmail", email);
                window.location.href = "/VerifyCode";
            } else {
                Swal.fire("Erreur", "Une erreur est survenue.", "error");
            }
        } catch (error) {
            Swal.fire("Erreur", "Impossible de contacter le serveur.", "error");
        } finally {
            btn.disabled = false;
            btn.innerText = "Envoyer le code";
        }
    });
</script>
</body>
</html>
