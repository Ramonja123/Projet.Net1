@page
@model FrontendSGH.Pages.VerifyCodeModel
@{
    Layout = null;
    ViewData["Title"] = "Vérification du code";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blue Kasbah Resort</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body style="margin: 0; padding: 0; overflow: hidden;">
<style>
    .bg-section {
        height: 100vh;
        overflow: hidden;
        background: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
    .bg-section::before {
        content: "";
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: rgba(10, 25, 47, 0.5);
        z-index: 1;
    }
    .form-container {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 450px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        padding: 2.5rem;
    }
    .gradient-text {
        background: linear-gradient(135deg, #006D77, #83C5BE);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 800;
    }
    .btn-gradient {
        background: linear-gradient(135deg, #006D77, #83C5BE);
        border: none;
        color: white;
        font-weight: 600;
        transition: transform 0.2s;
    }
    .btn-gradient:hover {
        transform: translateY(-2px);
        color: white;
    }
</style>

<div class="bg-section">
    <div class="form-container text-center">
        <i class="bi bi-shield-check display-4" style="background: linear-gradient(135deg, #006D77, #83C5BE); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
        <h2 class="gradient-text mt-3 mb-4">Vérification</h2>
        <p class="text-muted mb-4">Entrez le code à 6 chiffres reçu par email.</p>

        <form id="verifyForm">
            <div class="form-floating mb-3">
                <input type="text" class="form-control text-center fw-bold fs-4 tracking-widest" id="code" placeholder="123456" maxlength="6" required style="letter-spacing: 5px;">
                <label for="code">Code de vérification</label>
            </div>
            
            <button type="submit" class="btn btn-gradient w-100 py-2 rounded-pill">Vérifier</button>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        if (!localStorage.getItem("resetEmail")) {
            window.location.href = "/ForgotPassword";
        }
    });

    document.getElementById("verifyForm").addEventListener("submit", async function(e) {
        e.preventDefault();
        const code = document.getElementById("code").value;
        const email = localStorage.getItem("resetEmail");
        const btn = e.target.querySelector("button");
        
        btn.disabled = true;
        btn.innerText = "Vérification...";

        try {
            const res = await fetch("http://localhost:5004/api/Auth/verify-code", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ email: email, code: code })
            });
            
            if (res.ok) {
                // Return success
                localStorage.setItem("resetCode", code);
                window.location.href = "/ResetPassword";
            } else {
                Swal.fire("Code Invalide", "Le code est incorrect ou a expiré.", "error");
            }
        } catch (error) {
            Swal.fire("Erreur", "Impossible de contacter le serveur.", "error");
        } finally {
            btn.disabled = false;
            btn.innerText = "Vérifier";
        }
    });
</script>
</body>
</html>
